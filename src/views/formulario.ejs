    <body style=" background: #0f0c29;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to right, #24243e, #302b63, #0f0c29);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #24243e, #302b63, #0f0c29); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    ">

    <br>
    <br>
    <br>
        
    <div class="col-md-5 offset-md-5" >
        <div class="container" style="color: cornsilk;">
            <h1>EDITAR</h1>
        </div>
    </div>
        
        <br>
        <br>
        <br>


        
    <div class="container">
        <div class="row">
            <!-- formulario -->
            <div class="col-md-5 offset-md-3" >
               <div class="card">
                <div class="card-body">
                    <form action="/Edit/<%=users._id %> " method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="nombre y apellido" class="form-control" value="<%= users.nombre%>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellido" placeholder="telefono" class="form-control" value="<%= users.apellido%>">
                        </div>
                        <div class="form-group">
                            <textarea name="comentario"  cols="80" class="form-control" placeholder="comentario" > <%=users.comentario%></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Editar</button>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </div>




</body>
</html>
      